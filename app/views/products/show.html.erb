<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
          </br>
          <% if current_user %>
            <%= form_for [@product, @review] do |f| %>
              <div class="form-group">
                <dt><%= f.label :review %></dt>
                <dd><%= f.text_area :description, class: 'form-control' %></dd>
              </div>
              </br>
              <dt><%= f.label :rating %></dt>
              <dd><%= f.select :rating, [[5], [4], [3], [2], [1]], class: 'form-control' %></dd>
              </br>
              <dd><%= f.submit %></dd>
              </br>
            <% end %>
          <% end %>
          <dt>Average Rating</dt>
          <dd><%= @reviews_rating %> </dd>
          </br>
          <%@product.reviews.reverse_each do |review|%>
            <dt>Rating - </dt>
            <dd><%=review.rating%></dd>
            <dt>Review - </dt>
            <dd><%=review.description%></dd>
            <% if current_user.id == review.user_id %>
              <dd><%= link_to 'Delete', product_review_path(@product, review), method: :delete, data: { confirm: 'Are you sure?' } %></dd>
            <% end %>
            </br>
          <%end%>
        </dl>
      </div>
    </div>

  </article>

</section>
